{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:krsbx/realtime-chat-app.git",
  "author": "krsbx <firdaus.sati51@gmail.cm>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "check-type": "tsc -p ./tsconfig.build.json --noEmit",
    "build": "tsc -p ./tsconfig.build.json",
    "predev": "yarn clean",
    "dev": "tsc-watch -p ./tsconfig.build.json --onSuccess \"node ./dist/index.js\"",
    "prepare": "husky install && patch-package && sequelize-db-type",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "pretest": "yarn clean"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.15.13",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-custom-alias": "^1.3.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "patch-package": "^6.5.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "sequelize-cli": "^6.6.1",
    "sequelize-db-type": "^0.3.9",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@krsbx/response-formatter": "^1.0.0",
    "@krsbx/sequelize-fqp": "^0.1.3",
    "app-root-path": "^3.1.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-asyncmw": "^0.2.5",
    "http-status": "^1.6.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.0",
    "stream-chat": "^8.10.1",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "zod": "^3.21.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "sequelize-db-type": {
    "models": "src/models",
    "migrations": "src/migrations",
    "seeders": "src/seeders"
  }
}
